# Found Footy Environment Variables
# Copy this to .env and fill in your values

# API Keys
FOOTBALL_API_KEY=your_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_token_here

# S3/MinIO (development uses localhost)
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=ffuser
S3_SECRET_KEY=ffpass
S3_BUCKET_NAME=footy-videos

# MongoDB (development uses localhost)
MONGODB_URI=mongodb://ffuser:ffpass@mongo:27017/found_footy?authSource=admin
MONGODB_URL=mongodb://ffuser:ffpass@mongo:27017/found_footy?authSource=admin

# Dagster
DAGSTER_HOME=/app
DAGSTER_PG_USERNAME=ffuser
DAGSTER_PG_PASSWORD=ffpass
DAGSTER_PG_HOST=dagster-postgres
DAGSTER_PG_DB=dagster
DAGSTER_PG_PORT=5432

# Twitter Service
TWITTER_SESSION_URL=http://twitter-session:8888
TWITTER_COOKIES_FILE=/data/twitter_cookies.pkl

# Twitter Login Notifications (production)
# Set these to receive email when Twitter login is required
TWITTER_NOTIFY_EMAIL=your_email@example.com
VNC_PUBLIC_URL=http://your-server:4103
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail@gmail.com
SMTP_PASS=your_app_password

# Chrome/Browser
DISPLAY=:99

# LLM Server (llama.cpp via Tailscale MagicDNS)
# Chat/vision model endpoint
LLAMA_URL=http://joi:3100
# Embedding model endpoint
LLAMA_EMBED_URL=http://joi:3101

# Python
PYTHONPATH=/app
PYTHONHTTPSVERIFY=0
