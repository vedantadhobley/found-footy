{
  "name": "Found Footy Dev",
  "dockerComposeFile": "../docker-compose.dev.yml",
  "service": "dev",
  "workspaceFolder": "/workspace",
  "shutdownAction": "none",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "mongodb.mongodb-vscode",
        "github.copilot",
        "github.copilot-chat",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.ruffEnabled": true,
        "python.formatting.provider": "black",
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.autoImportCompletions": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/.pytest_cache": true,
          "**/.ruff_cache": true
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      }
    }
  },
  
  // Docker CLI already installed in Dockerfile.dev, no DinD feature needed
  
  // CRITICAL: Explicit port forwarding to prevent VS Code from guessing wrong
  // Only forward USER-FACING dashboards (not backend services)
  "forwardPorts": [3200, 3201, 3202, 3203],
  "portsAttributes": {
    "3200": {
      "label": "Temporal UI",
      "onAutoForward": "notify"
    },
    "3201": {
      "label": "MongoDB Express",
      "onAutoForward": "notify"
    },
    "3202": {
      "label": "MinIO Console",
      "onAutoForward": "notify"
    },
    "3203": {
      "label": "Twitter Login UI",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "echo 'âœ… Dev container ready! Temporal UI: http://localhost:3200'"
}
